<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="A1.Views.manager">
    <ContentPage.Content>
        <StackLayout
            HorizontalOptions="Center"
            VerticalOptions="Center">
            <Button Text="History"
                    BackgroundColor="LightBlue"
                    TextColor="Purple"
                    Clicked="navToHistory"
                ></Button>
            <Button Text="Restock"
                    BackgroundColor="LightBlue"
                    TextColor="Purple"
                    Clicked="navToRestock"
               ></Button>
            <Button Text="Add new Product"
                    BackgroundColor="LightBlue"
                    TextColor="Purple"
                    Clicked="navToNewProduct"
               ></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>